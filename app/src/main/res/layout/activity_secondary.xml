<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:useDefaultMargins="true"
    tools:context="rk.diraj.guessinggame.MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:columnCount="2"
        android:rowCount="2">

        <SeekBar
            android:id="@+id/minimumBar"
            android:layout_columnWeight="10"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/minimumAmount"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/holo_green_dark"
            android:gravity="end"
            android:text="1"
            android:textSize="36sp" />

        <SeekBar
            android:id="@+id/maximumBar"
            android:layout_columnWeight="10"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/maximumAMount"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/holo_red_dark"
            android:gravity="end"
            android:text="10"
            android:textSize="36sp" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:onClick="setButton"
        android:text="Set" />

</LinearLayout>